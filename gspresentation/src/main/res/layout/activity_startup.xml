<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gsMainBackground"
    tools:context=".ui.startup.StartupActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/GsMainCanvas"
        >
        <LinearLayout
            android:id="@+id/ac_startup_component_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GsMainSinglewindow"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:gravity="right"
            android:background="@drawable/shape_rectangle_bordered_8">
            <TextView
                android:id="@+id/ac_startup_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GsMainLable"
                android:text="@string/year_lable"/>
            <TextView
                android:id="@+id/ac_startup_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GsMainLable"
                android:text="@string/month_lable"/>
            <TextView
                android:id="@+id/ac_startup_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GsMainLable"
                android:text="@string/day_lable"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/ac_startup_component_go"
            android:layout_below="@id/ac_startup_component_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="64dp"
            style="@style/GsMainSinglewindow"
            android:background="@drawable/shape_single_line_portrait_16dp"
            >
            <TextView
                android:id="@+id/ac_startup_operation_go_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GsOperationLable"
                android:layout_margin="@dimen/gs_main_margin"
                android:text="@string/daytobegain"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/ac_startup_operation_go_button"
            android:layout_width="@dimen/gs_main_icon"
            android:layout_height="@dimen/gs_main_icon"
            android:layout_marginBottom="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:clickable="true"
            android:background="@drawable/shape_round_white_bg"
            android:src="@mipmap/go_icon"/>
    </RelativeLayout>
    <include
        layout="@layout/transitview_operationgreen_fullscreen"></include>
</RelativeLayout>

